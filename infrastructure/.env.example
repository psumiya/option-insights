# AWS Infrastructure Deployment Configuration
# Copy this file to .env and fill in your specific values

# Domain Configuration
# Root domain name (e.g., example.com)
DOMAIN_NAME=example.com

# Subdomain prefix for the application (e.g., trading, trading-dev)
# This will be combined with DOMAIN_NAME to create the full URL
SUBDOMAIN=trading

# S3 Bucket Configuration
# Unique name for the S3 bucket that will host static files
# Must be globally unique across all AWS accounts
# Recommended format: subdomain-domain-com (e.g., trading-example-com)
S3_BUCKET_NAME=trading-example-com

# Environment Configuration
# Deployment environment - must be either 'production' or 'dev'
# This affects resource naming and configuration
ENVIRONMENT=production

# AWS Configuration
# AWS region for deployment (must be us-east-1 for ACM certificates with CloudFront)
AWS_REGION=us-east-1

# AWS CLI profile to use for deployment
# Use 'default' for the default AWS CLI profile, or specify a named profile
AWS_PROFILE=default

# CloudFormation Stack Configuration
# Name for the CloudFormation stack
# Recommended format: static-website-{subdomain}
STACK_NAME=static-website-trading
